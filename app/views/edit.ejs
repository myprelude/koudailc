                            </div>
                        </div>
                        
                        
                    </div>
                </div>
            </div>
        </main>
        <!-- page-content" -->
        <!-- modal start -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="exampleModalLabel">发表文章</h4>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">title:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">keyword:</label>
                        <input type="text" class="form-control" id="recipient-name" placeholder="关键词可以多个用逗号隔开">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">topic:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">category:</label>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">技术文章
                            </label>
                            <label>
                                <input type="checkbox">记录
                            </label>
                            <label>
                                <input type="checkbox">新尝试
                            </label>
                        </div>
                    </div>
                    
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                  <button type="button" class="btn btn-inverse">确认发表</button>
                </div>
              </div>
            </div>
          </div>
          <!-- modal end -->
    </div>
    <!-- page-wrapper -->
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="assets/js//jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="https://cdn.bootcss.com/marked/0.3.19/marked.min.js"></script>
    <script src="https://cdn.bootcss.com/ace/1.3.3/ace.js"></script>
    <script src="assets/js/custom.js"></script>
    <script src='js/upload.js'></script>
    <script>
        // 编辑器 
        var acen_edit = ace.edit('mdeditor'); 
        acen_edit.setTheme('ace/theme/chrome');
        acen_edit.getSession().setMode('ace/mode/markdown');
        acen_edit.setFontSize('14px');
        acen_edit.renderer.setShowPrintMargin(false);
        var oldInfo = localStorage.getItem('ACE_TEXT_INFO');
        var isSave = false;
        if(oldInfo){
            acen_edit.setValue(oldInfo);
            $("#preview").html(marked(oldInfo));
        }
        acen_edit.on('focus',function(){
            
            $('#editTip').text('文档编辑中.....')
        })

        acen_edit.on('blur',function(){
            
            if(!isSave){
                $('#editTip').text('请 Ctrl+S 保存文档')
            }
            
        })
        acen_edit.on('change',function(){
            
            isSave = false;
        })
        acen_edit.commands.addCommand({
            name: 'myCommand',
            bindKey: {win: 'Ctrl-S',  mac: 'Command-S'},
            exec: function(editor) {
                isSave = true;
                localStorage.setItem('ACE_TEXT_INFO',editor.getValue());
                $('#editTip').text('文档已经保存')
            },
            readOnly: true // 如果不需要使用只读模式，这里设置false
        });
        $("#mdeditor").keyup(function() {
            $("#preview").html(marked(acen_edit.getValue()));
        });
        $('#send').on('click',function(){
            $('#myModal').modal('show')
            acen_edit.setValue('');
            $("#preview").html(marked(''));
            localStorage.setItem('ACE_TEXT_INFO','');
        });
        upload('#upload',function(data){
            $('#upload .p2 span').css({width:data})
        },function(data){
            $('#upload .t').show();
            setTimeout(function(){
                $('#upload .t').hide();
                $('#upload .p2 span').css({width:0})
            },1000)
            console.log(data);
        })

        // 监听浏览器关闭事件
        window.addEventListener('beforeunload',function(event){
            localStorage.setItem('ACE_TEXT_INFO',acen_edit.getValue());
            var message = "请确定文档已经保存？";
            event.returnValue = message;
            return message;
        })
        
