<% include header %>
<!--content start-->
<style>
  .w-e-text1 {
  padding: 0 10px;
}
.w-e-text1 p,
.w-e-text1 h1,
.w-e-text1 h2,
.w-e-text1 h3,
.w-e-text1 h4,
.w-e-text1 h5,
.w-e-text1 table,
.w-e-text1 pre {
  margin: 10px 0;
  line-height: 1.5;
}
.w-e-text1 ul,
.w-e-text1 ol {
  margin: 10px 0 10px 0px;
}
.w-e-text1 blockquote {
  display: block;
  border-left: 8px solid #d0e5f2;
  padding: 5px 10px;
  margin: 10px 0;
  line-height: 1.4;
  font-size: 100%;
  background-color: #f1f1f1;
}
.w-e-text1 code {
  display: inline-block;
  *display: inline;
  *zoom: 1;
  background-color: #f1f1f1;
  border-radius: 3px;
  padding: 3px 5px;
  margin: 0 3px;
}
.w-e-text1 pre code {
  display: block;
}
.w-e-text1 table {
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
}
.w-e-text1 table td,
.w-e-text1 table th {
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  padding: 3px 5px;
}
.w-e-text1 table th {
  border-bottom: 2px solid #ccc;
  text-align: center;
}
.w-e-text1:focus {
  outline: none;
}
.w-e-text1 img {
  cursor: pointer;
}
.w-e-text1 img:hover {
  box-shadow: 0 0 5px #333;
}
.w-e-text1 img.w-e-selected {
  border: 2px solid #1e88e5;
}
.w-e-text1 img.w-e-selected:hover {
  box-shadow: none;
}

</style>


