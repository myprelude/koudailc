<% include footer %>
<% if(show){%>

<link rel="stylesheet" href="css/wangEditor.css">
<script type="text/javascript" src="js/wangEditor.min.js"></script>
<script type="text/javascript">
    var E = window.wangEditor;
    var editor = new E('#div1');
    editor.customConfig.menus = [
        'bold',  // 粗体
        'foreColor',  // 文字颜色
        'link',  // 插入链接
        'list',  // 列表
        'justify',  // 对齐方式
        'quote',  // 引用
        'image',  // 插入图片
        'undo',  // 撤销
        'redo'  // 重复
    ];
    editor.customConfig.uploadImgServer = 'www.scopeman.cn';
    editor.create();
     $('#onAdd').click(function(){
      var title = $('#titleS').val();
      var info = editor.txt.html();
      if(title===''||info===''){
        alert('请输入内容')
      }else{
        $.ajax({
          type:'post',
          url:'shuo',
          data:{title:title,info:info},
          success:function(date){
            if(date.code===0){
              $('#titleS').val('');
              editor.txt.html('');
              alert('说说发表成功！');
            }
          }
        })
      }
    })
</script>
<%}%>
<script>
  (function(){
    var Page = function(configDate){
      this.count=configDate.count;
      this.id=$(configDate.id);
      this.index=configDate.index;
      this.create();
    }
    Page.prototype.create=function(){
      var dom = "<div class='page-show'><a href='/shuo?page="+(this.index-1==0?this.count:this.index-1)+" ' class='pre'>上一页</a><a class='index'>"+this.index+"</a><a href='/shuo?page="+(this.index==this.count?1:this.index+1)+" ' class='next'>下一页</a><span>一共"+this.count+"页</span></div>";
      this.id.append(dom);
    }
    window.Page = Page;
  })();
new Page({count:<%-count%>,id:'#pageBox',index:<%-page%>});
</script>