	}
	.dataPicker-info{
		background: #D1D5D8;
		position: relative;
		overflow: hidden;
	}
	.dataPicker-info div{
		float:left;
		height:100%;
	}
	.dataPicker-info ul{
		padding:0;
		margin:0;
		list-style: none;
		width:100%;
		max-height:100%;
		text-align: center;
	}
